{
  "name": "autodocgen",
  "displayName": "AutoDocGen â€“ Intelligent Code Documentation",
  "description": "A modular plugin for automatically generating inline function documentation in source code using local large language models.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "autodocgen.activate",
        "title": "AutoDocGen: Activate"
      },
      {
        "command": "autodocgen.scanCurrentFile",
        "title": "AutoDocGen: Document Current File"
      },
      {
        "command": "autodocgen.scanProject",
        "title": "AutoDocGen: Document Entire Project"
      }
    ],
    "configuration": {
      "title": "AutoDocGen Settings",
      "properties": {
        "autodocgen.manualMode": {
          "type": "boolean",
          "default": true,
          "description": "If true, document generation runs only via command. Disable to allow automatic processing on file save."
        },
        "autodocgen.selectedModel": {
          "type": "string",
          "default": "codellama:7b",
          "enum": [
            "codellama:7b",
            "deepseek-coder:1.3b",
            "mistral:7b"
          ],
          "description": "Local LLM model to use for documentation generation (via Ollama)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}