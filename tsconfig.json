{
  "compilerOptions": {
    "module": "Node16", // required for ES modules in Node
    "target": "ES2022", // modern syntax
    "outDir": "out", // compiled JS goes here
    "rootDir": "src", // TS source lives here
    "lib": ["ES2022"], // language features
    "sourceMap": true, // for debugging in VS Code
    "strict": true, // best practice
    "esModuleInterop": true, // allows commonjs + es import mixing
    "skipLibCheck": true // avoids type conflicts with vscode types
  },
  "include": ["src"], // compile everything in src/
  "exclude": ["node_modules", ".vscode-test"]
}
